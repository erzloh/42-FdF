    "version": "0.2.0",
    "configurations": [{
        "name": "debug",
        "type": "lldb",
        "request": "launch",
        "program": "fdf",
        "args": ["test_maps/pyra.fdf"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "C/C++: g++ build active file",
    }],
}
